#! /bin/bash
if [ "$1" = '--help' ]||[ "$1" = '-h' ];then
    echo remove *_C.* *_cpp.* *~
    echo usage: cleaner [directory]
    exit
fi
if [ "$#" -eq 1 ];then
    if [ -d "$1" ]
	then
	cd $1
	else
	echo $1 is not a directory
	exit
    fi
fi

rm -f *_C.* *_cpp.* *~ .*~ 2>/dev/null

if [ "$#" -eq 1 ];then
    cd $OLDPWD
fi
