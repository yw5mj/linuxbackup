#! /bin/bash
if [  $# -ne 1 ]
then
    echo no argument
    exit
fi
if [ "$1" == '-h' ]||[ "$1" == '--help' ]
then
    echo -e 'tnl: count number of lines in a file\n'
    echo tnl usage:   tnl+file
    exit
fi
file=`echo $1| awk -F'/' '{print  $NF}'`
if [ -f "$1" ]
then
    cou=`nl -ba $1|tail -n 1|awk '{print $1}'`
    echo  'total line number in file' $file: $cou
else
    echo file: $file does not exist
fi
