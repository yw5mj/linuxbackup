#! /bin/bash

if [ $# -lt 1 ];then
   echo incorrect input
   echo pywhich import [from]
   exit
fi

if [ "$1" == '--help' ]||[ "$1" == '-h' ];then
    echo -e 'pywhich: bash script to find a python module\n'
    echo 'pywhich usage:'
    echo -e 'pywhich import [from]\n'
    echo options:
    echo -e '--help\t: print usage'
    echo -e '-h\t: print usage'
    exit
fi

file='/tmp/pywhich.py'
if [ $# -eq 1 ]
   then
    echo import $1 >$file
   else
    echo from $2 import $1 >$file
fi
echo print $1.__file__ >>$file
echo $1: `python $file 2>/dev/null`